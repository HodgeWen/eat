// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model FoodType {
  id Int @id @default(autoincrement())
  // 类别名称
  name String
}

model Food {
  id Int @id @default(autoincrement())
  // 食物名称
  name String
  // 食物类别名称
  foodTypeName String
  // 食物类别id
  foodTypeId Int
}